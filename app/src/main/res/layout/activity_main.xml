<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="401dp"
        android:layout_height="68dp"
        android:fontFamily="monospace"
        android:text="Mi Calculadora"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pantalla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pantalla"
        android:layout_width="374dp"
        android:layout_height="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="530dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" >

        <Button
            android:id="@+id/button_sin19"
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:backgroundTint="#673AB7"
            android:onClick="sin"
            android:text="sin"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_igual"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:backgroundTint="#FF5722"
            android:onClick="igual"
            android:text="="
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/button_divi"
            android:layout_width="99dp"
            android:layout_height="106dp"
            android:backgroundTint="#673AB7"
            android:onClick="division"
            android:text="·/·"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:onClick="bt0"
            android:text="0"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/button_coma"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:backgroundTint="#673AB7"
            android:onClick="btcoma"
            android:text="."
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button_multi"
            android:layout_width="101dp"
            android:layout_height="106dp"
            android:backgroundTint="#673AB7"
            android:onClick="multiplicacion"
            android:text="x"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:onClick="bt3"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:onClick="bt2"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:onClick="bt1"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button_resta"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:backgroundTint="#673AB7"
            android:onClick="resta"
            android:text="-"
            android:textColor="#000000"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:onClick="bt6"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:onClick="bt5"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:onClick="bt4"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:onClick="bt9"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:onClick="bt8"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:onClick="bt7"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="100dp"
            android:layout_height="102dp"
            android:backgroundTint="#FF5722"
            android:onClick="clear"
            android:text="AC"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_tan"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:backgroundTint="#673AB7"
            android:onClick="tan"
            android:text="tan"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_cos"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:backgroundTint="#673AB7"
            android:onClick="cos"
            android:text="cos"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_suma"
            android:layout_width="101dp"
            android:layout_height="110dp"
            android:backgroundTint="#673AB7"
            android:onClick="suma"
            android:text="+"
            android:textColor="#000000"
            app:layout_column="3"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/button_radgrad"
        android:layout_width="119dp"
        android:layout_height="64dp"
        android:text="GRAD"
        app:layout_constraintEnd_toEndOf="@+id/pantalla"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="119dp" />
</androidx.constraintlayout.widget.ConstraintLayout>